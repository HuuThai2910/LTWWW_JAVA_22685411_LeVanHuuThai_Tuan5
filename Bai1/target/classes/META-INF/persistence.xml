<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence  https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="QUANLYDIENTHOAI" transaction-type="RESOURCE_LOCAL">

        <properties>
            <property name="jakarta.persistence.jdbc"
                      value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/QUANLYDIENTHOAI"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="sapassword"/>

            <property name="jakarta.persistence.schema-generation.database.action"
                      value="update"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>